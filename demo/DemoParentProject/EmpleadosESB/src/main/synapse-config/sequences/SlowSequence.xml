<?xml version="1.0" encoding="UTF-8"?>
<sequence name="SlowSequence" statistics="enable" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <clone continueParent="true" sequential="true">
        <target>
            <sequence>
                <log>
                    <property name="MESSAGE" value="Sending request to SlowApiEndpoint...."/>
                </log>
                <call blocking="true" description="Slow API endpoint">
                    <endpoint key="SlowApiEndpoint"/>
                </call>
                <log>
                    <property name="MESSAGE" value="Receiving response from SlowApiEndpoint...."/>
                </log>
            </sequence>
        </target>
    </clone>
</sequence>
