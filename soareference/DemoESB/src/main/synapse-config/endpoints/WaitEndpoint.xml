<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="WaitEndpoint" xmlns="http://ws.apache.org/ns/synapse">
    <http method="get" uri-template="http://localhost:8280/soawait">
        <timeout>
            <duration>100</duration>
            <responseAction>fault</responseAction>
        </timeout>
        <suspendOnFailure>
            <errorCodes>101504</errorCodes>
            <initialDuration>20000</initialDuration>
            <progressionFactor>1.1</progressionFactor>
            <maximumDuration>30000</maximumDuration>
        </suspendOnFailure>
        <markForSuspension>
            <errorCodes>-1</errorCodes>
            <retriesBeforeSuspension>1</retriesBeforeSuspension>
            <retryDelay>1</retryDelay>
        </markForSuspension>
    </http>
</endpoint>
