<?xml version="1.0" encoding="UTF-8"?>
<api context="/soawait" name="soawait" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET">
        <inSequence>
            <script language="js"><![CDATA[var dt = new Date();
		    dt.setTime(dt.getTime() + 120000);
		    while (new Date().getTime() < dt.getTime());]]></script>
            <property name="ContentType" scope="axis2" type="STRING" value="text/xml"/>
            <payloadFactory media-type="xml">
                <format>
                    <response xmlns="">
                        <status>OK</status>
                    </response>
                </format>
                <args/>
            </payloadFactory>
            <header action="remove" name="To" scope="default"/>
            <property name="RESPONSE" scope="default" type="STRING" value="true"/>
            <property action="remove" name="NO_ENTITY_BODY" scope="axis2"/>
            <log>
                <property name="API" value="=============== soawait FIN"/>
            </log>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
