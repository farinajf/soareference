<?xml version="1.0" encoding="UTF-8"?>
<template name="AmtegaGenericHTTPEndpointTemplate" xmlns="http://ws.apache.org/ns/synapse">
    <endpoint name="$name">
        <http method="get" uri-template="$uri">
            <timeout>
                <duration>10000</duration>
                <responseAction>fault</responseAction>
            </timeout>
            <suspendOnFailure>
                <errorCodes>101504</errorCodes>
                <initialDuration>5000</initialDuration>
                <progressionFactor>1.1</progressionFactor>
                <maximumDuration>30000</maximumDuration>
            </suspendOnFailure>
            <markForSuspension>
                <errorCodes>-1</errorCodes>
                <retriesBeforeSuspension>1</retriesBeforeSuspension>
                <retryDelay>1</retryDelay>
            </markForSuspension>
        </http>
    </endpoint>
</template>
