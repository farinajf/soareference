<?xml version="1.0" encoding="UTF-8"?>
<template name="AmtegaGenericEndpointTemplate" xmlns="http://ws.apache.org/ns/synapse">
    <endpoint name="$name">
        <address uri="$uri">
            <timeout>
                <duration>10000</duration>
                <responseAction>fault</responseAction>
            </timeout>
            <suspendOnFailure>
                <errorCodes>101503</errorCodes>
                <initialDuration>60000</initialDuration>
                <progressionFactor>1.1</progressionFactor>
                <maximumDuration>90000</maximumDuration>
            </suspendOnFailure>
            <markForSuspension>
                <errorCodes>101504</errorCodes>
                <retriesBeforeSuspension>4</retriesBeforeSuspension>
                <retryDelay>30000</retryDelay>
            </markForSuspension>
        </address>
    </endpoint>
</template>
